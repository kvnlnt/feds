</table>
{{/example}}

{{>
header
title="Wrap"
descr="An optional <em>wrap</em> class is available to wrap the table data for smaller screens. In order for wrapping
to work, the <code>data-header</code> attribute must be applied to all <code>td</code>'s"
}}

{{#example flex=false code=true}}
<table class="table--wrap">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>DOB</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td data-header="Name">Abby</td>
            <td data-header="Phone">123-123-1234</td>
            <td data-header="DOB">10/12/76</td>
        </tr>
        <tr>
            <td data-header="Name">Bruce</td>
            <td data-header="Phone">08/26/85</td>
            <td data-header="DOB">345-678-9101</td>
        </tr>
        <tr>
            <td data-header="Name">Catherine</td>
            <td data-header="Phone">234-567-8910</td>
            <td data-header="DOB">03/21/95</td>
        </tr>
    </tbody>
</table>
{{/example}}

