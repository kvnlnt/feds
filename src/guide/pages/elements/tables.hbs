{{#page section="Elements" title="Tables" }}

{{{
atom-header
title="Basic"
source="/src/styles/elements/tables.styl"
descr="Due to their unique status, tables are styled directly."
atoms=true
}}}

{{#example flex=false code=true }}
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>DOB</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Abby</td>
            <td>123-123-1234</td>
            <td>10/12/76</td>
        </tr>
        <tr>
            <td>Bruce</td>
            <td>08/26/85</td>
            <td>345-678-9101</td>
        </tr>
        <tr>
            <td>Catherine</td>
            <td>234-567-8910</td>
            <td>03/21/95</td>
        </tr>
    </tbody>
</table>
{{/example}}

{{>
header
title="Pivot"
descr="A table can be pivoted by adding the <em>pivot</em> class. This creates a row based layout of the same
table."
}}

{{#example flex=false code=true }}
<table class="table--pivot">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>DOB</th>
