{{#page section="Elements" title="Tables" source="/src/styles/elements/tables.styl" }}

{{>
header
title="Tables"
descr="Tables are for displaying tabular data and therefore it's important to leverage the default syntax."
}}

{{#example flex=false }}
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>DOB</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Abby</td>
            <td>123-123-1234</td>
            <td>10/12/76</td>
        </tr>
        <tr>
            <td>Bruce</td>
            <td>08/26/85</td>
            <td>345-678-9101</td>
        </tr>
        <tr>
            <td>Catherine</td>
            <td>234-567-8910</td>
            <td>03/21/95</td>
        </tr>
    </tbody>
</table>
{{/example}}

{{>
header
title="Pivot"
descr="A table can be pivoted by adding the <em>pivot</em> class. This creates a row based layout of the same
table."
}}

