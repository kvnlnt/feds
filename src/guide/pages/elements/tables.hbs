{{/example}}

{{>
header
title="Wrap"
descr="An optional <em>wrap</em> class is available to wrap the table data for smaller screens."
}}

<p class="">In order for wrapping to work, the <code>data-title</code> attribute must be applied to all <code>td</code>'s</p>

{{#example flex=false }}
<table class="table--wrap">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>DOB</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td data-title="Name">Abby</td>
            <td data-title="Phone">123-123-1234</td>
            <td data-title="DOB">10/12/76</td>
        </tr>
        <tr>
            <td data-title="Name">Bruce</td>
            <td data-title="Phone">08/26/85</td>
            <td data-title="DOB">345-678-9101</td>
        </tr>
        <tr>
            <td data-title="Name">Catherine</td>
            <td data-title="Phone">234-567-8910</td>
            <td data-title="DOB">03/21/95</td>
        </tr>
    </tbody>
</table>
{{/example}}

