{{#example flex=false code=true}}
<div class="text-color-white text-align-center font-size-s">
    <!-- One Column -->
    <div class="flex margin-bot-l leading-xl">
        <div class="width-full bg-color-primary">.width-full</div>
    </div>
    <!-- Two Columns -->
    <div class="flex margin-bot-l leading-xl">
        <div class="width-1/2 bg-color-primary">.width-1/2</div>
        <div class="width-1/2 bg-color-primary-l">.width-1/2</div>
    </div>
    <!-- Three Columns -->
    <div class="flex margin-bot-l leading-xl">
        <div class="width-1/3 bg-color-primary">.width-1/3</div>
        <div class="width-1/3 bg-color-primary-l">.width-1/3</div>
        <div class="width-1/3 bg-color-primary">.width-1/3</div>
    </div>
    <!-- Four Columns -->
    <div class="flex margin-bot-l leading-xl">
        <div class="width-1/4 bg-color-primary">.width-1/4</div>
        <div class="width-1/4 bg-color-primary-l">.width-1/4</div>
        <div class="width-1/4 bg-color-primary">.width-1/4</div>
        <div class="width-1/4 bg-color-primary-l">.width-1/4</div>
    </div>
    <!-- Five Columns -->
    <div class="flex margin-bot-l leading-xl">
        <div class="width-1/5 bg-color-primary">.width-1/5</div>
        <div class="width-1/5 bg-color-primary-l">.width-1/5</div>
        <div class="width-1/5 bg-color-primary">.width-1/5</div>
        <div class="width-1/5 bg-color-primary-l">.width-1/5</div>
        <div class="width-1/5 bg-color-primary">.width-1/5</div>
    </div>
    <!-- Six Columns -->
    <div class="flex margin-bot-l leading-xl">
        <div class="width-1/6 bg-color-primary">.width-1/6</div>
        <div class="width-1/6 bg-color-primary-l">.width-1/6</div>
        <div class="width-1/6 bg-color-primary">.width-1/6</div>
        <div class="width-1/6 bg-color-primary-l">.width-1/6</div>
        <div class="width-1/6 bg-color-primary">.width-1/6</div>
        <div class="width-1/6 bg-color-primary-l">.width-1/6</div>
    </div>
</div>
{{/example}}

{{{SectionHeader
title="Responsive"
descr="Responsive grids can be implemented a couple different ways depending on your needs."
}}}

{{#example title="Basic" descr="An simple responsive grid is to collapse everything to a single column
by using
the display atom's media query prefixes." flex=false code=true}}
<div class="text-color-white text-align-center font-size-s">
    <!-- Mobile = Two Columns. >= Tablet = Four Columns -->
    <div class="tablet:flex flex-wrap leading-xl">
        <div class="tablet:width-1/4 bg-color-primary">col</div>
        <div class="tablet:width-1/4 bg-color-primary-l">col</div>
        <div class="tablet:width-1/4 bg-color-primary">col</div>
        <div class="tablet:width-1/4 bg-color-primary-l">col</div>
    </div>
</div>
{{/example}}

{{#example title="Complex" descr="Use <code>flex-wrap</code> and the <code>height</code> and <code>width</code> atom's
media query prefixes to
create complex responsive grids." flex=false code=true}}
<div class="text-color-white text-align-center font-size-s">
    <!-- Mobile = Two Columns. >= Tablet = Four Columns -->
    <div class="flex flex-wrap leading-xl">
        <div class="width-1/2 tablet:width-1/4 bg-color-primary">col</div>
        <div class="width-1/2 tablet:width-1/4 bg-color-primary-l">col</div>
        <div class="width-1/2 tablet:width-1/4 bg-color-primary">col</div>
        <div class="width-1/2 tablet:width-1/4 bg-color-primary-l">col</div>
    </div>
</div>
{{/example}}



