  &-right-s {
    padding-right: 1.2rem;
  }

  &-right-base {
    padding-right: 1.6rem;
  }

  &-right-l {
    padding-right: 2.4rem;
  }

  &-right-xl {
    padding-right: 3.2rem;
  }

  &-right-2xl {
    padding-right: 4.8rem;
  }

  &-right-3xl {
    padding-right: 6rem;
  }

  &-right-none {
    padding-right: 0;
  }

  &-inherit {
    padding: inherit;
  }

.pad {
  {$spacing-padding};
}

mq('pad', $spacing-padding);