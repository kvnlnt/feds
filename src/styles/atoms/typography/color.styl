.text-color {
  &-black {
    color: $color-black;
  }

  &-danger {
    color: $color-red;
  }

  &-grey {
    color: $color-grey;
  }

  &-grey-l {
    color: $color-grey-l;
  }

  &-light-grey {
    color: $color-light-grey;
  }

  &-light-grey-l {
    color: $color-light-grey-l;
  }

  &-light-grey-xl {
    color: $color-light-grey-xl;
  }

  &-info {
    color: $color-blue;
  }

  &-primary {
    color: $color-blue;
  }

  &-primary-l {
    color: $color-blue-l;
  }

  &-secondary {
    color: $color-blue-d;
  }

  &-success {
    color: $color-green;
  }

  &-warn {
    color: $color-yellow;
  }

  &-white {
    color: $color-white;
  }
}

