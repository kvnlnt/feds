$sizing-width =
    &-unit-2xs {
        width: 1rem;
    }

    &-unit-xs {
        width: 2rem;
    }

    &-unit-s {
        width: 3rem;
    }

    &-unit-base {
        width: 4rem;
    }

    &-unit-l {
        width: 5rem;
    }

    &-unit-xl {
        width: 6rem;
    }

    &-unit-2xl {
        width: 8rem;
    }

    &-unit-3xl {
        width: 10rem;
    }

    &-unit-4xl {
        width: 12rem;
    }

    &-unit-5xl {
        width: 16rem;
    }

    &-auto {
        width: auto;
    }

    &-px {
        width: 1px;
    }

    &-1\\/2 {
        width: 50%;
    }

    &-1\\/3 {
        width: 33.33333%;
    }

    &-2\\/3 {
        width: 66.66667%;
    }

    &-1\\/4 {
        width: 25%;
    }

    &-3\\/4 {
        width: 75%;
    }

    &-1\\/5 {
        width: 20%;
    }

    &-2\\/5 {
        width: 40%;
    }

    &-3\\/5 {
        width: 60%;
    }

    &-4\\/5 {
        width: 80%;
    }

    &-1\\/6 {
        width: 16.66667%;
    }

    &-5\\/6 {
        width: 83.33333%;
    }

    &-max-full {
        max-width: 100%;
    }

    &-min-full {
        min-width: 100%;
    }

    &-full {
        width: 100%;
    }

    &-screen {
        width: 100vw;
    }

    &-min-screen {
        min-width: 100vw;
    }

.width {
    {$sizing-width};
}

mq('width', $sizing-width);