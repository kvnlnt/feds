$layout-display =
  &block {
    display: block;
  }

  &inline-block {
    display: inline-block;
  }

  &inline {
    display: inline;
  }

  &table {
    display: table;
  }

  &table-row {
    display: table-row;
  }

  &table-cell {
    display: table-cell;
  }

  &hidden {
    display: none;
  }

  &flex {
    display: flex;
  }

  &inline-flex {
    display: inline-flex;
  }

. {
  {$layout-display};
}

mq('', $layout-display);