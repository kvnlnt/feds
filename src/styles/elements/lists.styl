$list =
  &-reset {
    list-style: none;
    margin: 0;
    padding: 0;

    li {
      margin: 0;
      padding: 0;
    }
  }

ul, ol {
  line-height: 2.8rem;
  margin-left: 0;
  padding-left: 0;

  &.list {
    {$list};
  }

  li {
    margin-left: 1.4rem;
    padding-left: 0;
  }
}

mq('list', $list);