// base styles
:root {
  font-size: 62.5%;
  font-family: OpenSans, Arial, Helvetica, sans-serif;
}

html, body {
  font-size: 1.4rem;
  font-family: OpenSans, Arial, Helvetica, sans-serif;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
}

:focus {
  outline: 0;
  border: 1px solid $color-blue;
  margin: -1px;
}